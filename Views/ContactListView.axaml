<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:willardcrm.ViewModels"
             mc:Ignorable="d" d:DesignWidth="650" d:DesignHeight="450"
             x:Class="willardcrm.Views.ContactListView"
             x:DataType="vm:ContactListViewModel">
	<DockPanel>
		<Grid Background="Gainsboro"
      HorizontalAlignment="Left"
      VerticalAlignment="Top"
      Width="650"
      Height="450"
      ColumnDefinitions="*,*"
      RowDefinitions="*">
			<DockPanel Background="LightBlue" Grid.Row="0" Grid.Column="0">
				<Button DockPanel.Dock="Bottom"
								HorizontalAlignment="Stretch"
								HorizontalContentAlignment="Center"
								x:CompileBindings="False"
								Command="{Binding $parent[Window].DataContext.AddItem}">
					Add Item
				</Button>
				<ItemsControl ItemsSource="{Binding ListItems}">
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<StackPanel Margin="4">
								<ListBox SelectionMode="Single"
										 x:Name="ListItems"/>
							</StackPanel>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</DockPanel>
				<TextBlock Grid.Row="0" Grid.Column="1">Contact pane</TextBlock>
		</Grid>
	</DockPanel>
</UserControl>